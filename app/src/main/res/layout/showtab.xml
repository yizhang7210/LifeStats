<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:id="@+id/horizontalScrollView" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:visibility="visible">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="@string/wakeupButton"
                    android:id="@+id/wakeupButton"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="@string/sleepButton"
                    android:id="@+id/sleepButton"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="@string/breakfastButton"
                    android:id="@+id/breakfastButton"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="@string/lunchButton"
                    android:id="@+id/lunchButton"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp" />

            </TableRow>
        </TableLayout>
    </HorizontalScrollView>
</RelativeLayout>